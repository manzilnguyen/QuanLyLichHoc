@{
    ViewData["Title"] = "Cấp tài khoản Học sinh";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-info text-white text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold">CẤP TÀI KHOẢN HỌC SINH</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateStudentAccount">
                        <div class="form-floating mb-3">
                            <select name="studentId" class="form-select" asp-items="ViewBag.StudentId"></select>
                            <label>Chọn Học sinh (Chưa có TK)</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input name="username" class="form-control" placeholder="Tên đăng nhập" required />
                            <label>Tên đăng nhập</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input name="password" type="text" class="form-control" value="123456" placeholder="Mật khẩu" required />
                            <label>Mật khẩu (Mặc định: 123456)</label>
                        </div>

                        <div class="d-grid gap-2 d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">Quay lại</a>
                            <button type="submit" class="btn btn-info text-white rounded-pill px-4 shadow-sm fw-bold">
                                <i class="bi bi-check-lg me-1"></i> Cấp tài khoản
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>