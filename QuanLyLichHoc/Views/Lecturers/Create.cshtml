@model QuanLyLichHoc.Models.Lecturer
@{
    ViewData["Title"] = "Thêm Giảng viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold text-uppercase">Thêm Giảng Viên Mới</h5>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-10">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary fw-bold mb-3"><i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân</h6>

                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                                    <label asp-for="FullName">Họ và Tên</label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                                    <label asp-for="Email">Email (Tài khoản)</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-primary fw-bold mb-3"><i class="bi bi-briefcase-fill me-2"></i>Công việc & Liên hệ</h6>

                                <div class="form-floating mb-3">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                                    <label asp-for="PhoneNumber">Số điện thoại</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Department" class="form-control" placeholder="Khoa/Bộ môn" list="deptList" />
                                    <label asp-for="Department">Khoa / Bộ môn</label>
                                    <span asp-validation-for="Department" class="text-danger small"></span>

                                    <datalist id="deptList">
                                        <option value="Công nghệ thông tin" />
                                        <option value="Kinh tế" />
                                        <option value="Ngoại ngữ" />
                                        <option value="Du lịch" />
                                    </datalist>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 border-top pt-3">
                            <a asp-action="Index" class="text-decoration-none text-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold shadow-sm rounded-pill">
                                <i class="bi bi-save me-1"></i> Lưu lại
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}