@model QuanLyLichHoc.Models.Lecturer
@{
    ViewData["Title"] = "Cập nhật Giảng viên";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning bg-opacity-75 text-dark text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold text-uppercase">Cập Nhật Thông Tin</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" placeholder="Họ và tên" />
                                    <label asp-for="FullName">Họ và Tên</label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
                                    <label asp-for="Email">Email</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="SĐT" />
                                    <label asp-for="PhoneNumber">Số điện thoại</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="Department" class="form-control" placeholder="Khoa" />
                                    <label asp-for="Department">Khoa / Bộ môn</label>
                                    <span asp-validation-for="Department" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-warning px-5 fw-bold shadow-sm rounded-pill">
                                <i class="bi bi-check-circle me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}