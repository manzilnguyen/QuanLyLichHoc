@model IEnumerable<QuanLyLichHoc.Models.Grade>
@{
    ViewData["Title"] = "Quản lý Điểm";
    double avg = ViewBag.AvgScore != null ? double.Parse(ViewBag.AvgScore) : 0;
}

<div class="container-fluid py-4">
    <div class="row g-3 mb-4">
        <div class="col-md-8">
            <h3 class="fw-bold text-primary mb-1"><i class="bi bi-mortarboard-fill me-2"></i>Quản lý Điểm số</h3>
            <p class="text-muted small">Quản lý kết quả học tập của sinh viên.</p>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-sm border-0">
                <div class="card-body py-2 d-flex justify-content-between align-items-center">
                    <div>
                        <small class="opacity-75">Điểm Trung Bình</small>
                        <h4 class="mb-0 fw-bold">@ViewBag.AvgScore</h4>
                    </div>
                    <div class="text-end border-start border-white border-opacity-25 ps-3">
                        <small class="opacity-75">Tỉ lệ Đạt</small>
                        <h4 class="mb-0 fw-bold">@ViewBag.PassRate%</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4 bg-light">
        <div class="card-body py-3">
            <form asp-action="Index" method="get" class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="small fw-bold text-muted">Lớp học</label>
                    <select name="classId" class="form-select form-select-sm" asp-items="ViewBag.ClassId">
                        <option value="">-- Tất cả Lớp --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="small fw-bold text-muted">Môn học</label>
                    <select name="subjectId" class="form-select form-select-sm" asp-items="ViewBag.SubjectId">
                        <option value="">-- Tất cả Môn --</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="small fw-bold text-muted">Tìm kiếm</label>
                    <div class="input-group input-group-sm">
                        <input type="text" name="searchString" class="form-control" placeholder="Tên hoặc Mã SV..." value="@ViewData["CurrentFilter"]">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
                    </div>
                </div>
                <div class="col-md-3 text-end">
                    <div class="btn-group btn-group-sm shadow-sm">
                        <a asp-action="Import" class="btn btn-success fw-bold"><i class="bi bi-file-earmark-spreadsheet"></i> Import</a>
                        <a asp-action="Export" class="btn btn-outline-success fw-bold"><i class="bi bi-download"></i> Export</a>
                        <a asp-action="Create" class="btn btn-primary fw-bold"><i class="bi bi-plus-lg"></i> Nhập điểm</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary text-uppercase small fw-bold">
                        <tr>
                            <th class="ps-4">Mã SV</th>
                            <th>Họ và Tên</th>
                            <th>Lớp</th>
                            <th>Môn học</th>
                            <th class="text-center">Điểm số</th>
                            <th class="text-center">Xếp loại</th>
                            <th>Học kỳ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><td colspan="7" class="text-center py-5 text-muted">Chưa có dữ liệu điểm.</td></tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 font-monospace text-primary fw-bold">@item.Student.StudentCode</td>
                                    <td class="fw-bold text-dark">@item.Student.FullName</td>
                                    <td><span class="badge bg-light text-dark border">@item.Student.Class?.ClassName</span></td>
                                    <td>@item.Subject.SubjectName</td>

                                    <td class="text-center">
                                        @if (item.Score >= 8.5)
                                        {
                                            <span class="badge bg-success fs-6">@item.Score</span>
                                        }
                                        else if (item.Score >= 7.0)
                                        {

                                            <span class="badge bg-info text-dark fs-6">@item.Score</span>
                                        }
                                        else if (item.Score >= 5.0)
                                        {

                                            <span class="badge bg-warning text-dark fs-6">@item.Score</span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-danger fs-6">@item.Score</span>
                                        }
                                    </td>

                                    <td class="text-center small">
                                        @if (item.Score >= 8.5)
                                        {
                                            <span class="text-success fw-bold">Xuất sắc</span>
                                        }
                                        else if (item.Score >= 7.0)
                                        {

                                            <span class="text-info fw-bold">Khá</span>
                                        }
                                        else if (item.Score >= 5.0)
                                        {

                                            <span class="text-warning fw-bold">Trung bình</span>
                                        }
                                        else
                                        {

                                            <span class="text-danger fw-bold">Trượt môn</span>
                                        }
                                    </td>

                                    <td class="text-muted small">@item.Semester</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>