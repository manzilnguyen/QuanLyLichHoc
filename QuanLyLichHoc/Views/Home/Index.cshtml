@using QuanLyLichHoc.Models
@{
    ViewData["Title"] = "Trang chủ";
    bool isAdmin = User.IsInRole("Admin") || User.IsInRole("Manager");
    var banners = ViewBag.Banners as List<Banner>;
    var nextClass = ViewBag.NextClass as Schedule;
}

<div class="container-fluid py-4">

    <div class="row mb-4">
        <div class="col-12 mb-3">
            <h3 class="fw-bold text-dark">
                <span class="text-primary">@ViewBag.Greeting</span>, @User.Identity.Name! 👋
            </h3>
            <p class="text-muted">Chúc bạn một ngày làm việc và học tập hiệu quả.</p>
        </div>

        @if (banners != null && banners.Any())
        {
            <div class="col-12">
                <div id="bannerCarousel" class="carousel slide shadow-sm rounded-4 overflow-hidden" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            int i = 0;
                        }
                        @foreach (var item in banners)
                        {
                            <div class="carousel-item @(i++ == 0 ? "active" : "")" data-bs-interval="4000">
                                <div class="p-5 text-white d-flex align-items-center"
                                     style="min-height: 250px; background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('@(item.ImageUrl ?? "https://source.unsplash.com/random/1200x400?school")') center/cover;">
                                    <div>
                                        <h2 class="fw-bold">@item.Title</h2>
                                        <p class="fs-5 opacity-75">@item.Description</p>
                                        @if (!string.IsNullOrEmpty(item.LinkUrl))
                                        {
                                            <a href="@item.LinkUrl" class="btn btn-light fw-bold rounded-pill px-4">Xem chi tiết</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (isAdmin)
    {
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-primary text-white bg-gradient">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75">Học sinh</h6>
                                <h2 class="fw-bold mb-0">@ViewBag.TotalStudents</h2>
                            </div>
                            <i class="bi bi-people-fill fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-success text-white bg-gradient">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75">Giảng viên</h6>
                                <h2 class="fw-bold mb-0">@ViewBag.TotalLecturers</h2>
                            </div>
                            <i class="bi bi-person-badge-fill fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-warning text-dark bg-gradient">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75">Lớp học</h6>
                                <h2 class="fw-bold mb-0">@ViewBag.TotalClasses</h2>
                            </div>
                            <i class="bi bi-bank2 fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 bg-danger text-white bg-gradient">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase mb-1 opacity-75">Môn học</h6>
                                <h2 class="fw-bold mb-0">@ViewBag.TotalCourses</h2>
                            </div>
                            <i class="bi bi-book-half fs-1 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3 border-0">
                        <h6 class="m-0 fw-bold text-primary"><i class="bi bi-bar-chart-fill me-2"></i>Thống kê sĩ số</h6>
                    </div>
                    <div class="card-body">
                        <canvas id="statsChart" style="max-height: 300px;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3 border-0">
                        <h6 class="m-0 fw-bold text-primary"><i class="bi bi-grid-fill me-2"></i>Quản trị nhanh</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a href="/Students/Create" class="btn btn-outline-primary text-start p-3 border-2 fw-bold">
                                <i class="bi bi-person-plus-fill me-2"></i> Thêm Học sinh mới
                            </a>
                            <a href="/Schedules/Create" class="btn btn-outline-success text-start p-3 border-2 fw-bold">
                                <i class="bi bi-calendar-plus-fill me-2"></i> Xếp Lịch học
                            </a>
                            <a href="/UserManage/Index" class="btn btn-outline-danger text-start p-3 border-2 fw-bold">
                                <i class="bi bi-shield-lock-fill me-2"></i> Cấp tài khoản
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @if (nextClass != null)
                {
                    <div class="card border-0 shadow-sm mb-4 bg-primary text-white overflow-hidden position-relative">
                        <div class="position-absolute top-0 end-0 opacity-25" style="font-size: 10rem; transform: translate(20%, -20%);">
                            <i class="bi bi-clock-history"></i>
                        </div>

                        <div class="card-body p-4 position-relative">
                            <div class="d-flex align-items-center mb-2">
                                <span class="badge bg-warning text-dark me-2">SẮP DIỄN RA</span>
                                <small class="opacity-75">@DateTime.Now.ToString("dd/MM/yyyy")</small>
                            </div>
                            <h2 class="fw-bold mb-1">@nextClass.Subject.SubjectName</h2>
                            <p class="fs-5 opacity-90 mb-3"><i class="bi bi-geo-alt-fill me-1"></i> Phòng: <strong>@nextClass.Room.RoomName</strong></p>

                            <div class="d-flex gap-3 align-items-center">
                                <div class="bg-white bg-opacity-25 rounded p-2 px-3">
                                    <i class="bi bi-play-circle me-1"></i> Bắt đầu: <strong>@nextClass.StartTime.ToString(@"hh\:mm")</strong>
                                </div>
                                @if (User.IsInRole("Student"))
                                {
                                    <a href="/Public/CheckIn?scheduleId=@nextClass.Id" class="btn btn-light fw-bold text-primary shadow-sm">
                                        <i class="bi bi-qr-code-scan me-1"></i> Điểm danh ngay
                                    </a>
                                }
                                else
                                {
                                    <a href="/Attendance/TakeAttendance?scheduleId=@nextClass.Id" class="btn btn-light fw-bold text-primary shadow-sm">
                                        <i class="bi bi-check2-square me-1"></i> Vào điểm danh
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card border-0 shadow-sm mb-4 bg-success text-white bg-opacity-75">
                        <div class="card-body p-4 text-center">
                            <i class="bi bi-cup-hot-fill fs-1 mb-2"></i>
                            <h4>Không có lịch học nào sắp tới hôm nay!</h4>
                            <p class="mb-0">Hãy tận hưởng thời gian nghỉ ngơi.</p>
                        </div>
                    </div>
                }

                <div class="row g-3">
                    <div class="col-md-6">
                        <a href="/Public/MySchedule" class="card border-0 shadow-sm h-100 text-decoration-none hover-shadow transition">
                            <div class="card-body d-flex align-items-center p-4">
                                <div class="bg-info bg-opacity-10 text-info p-3 rounded-circle me-3">
                                    <i class="bi bi-calendar-week fs-3"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold text-dark mb-1">Lịch biểu</h5>
                                    <small class="text-muted">Xem thời khóa biểu tuần</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        @if (User.IsInRole("Student"))
                        {
                            <a href="/Public/MyGrades" class="card border-0 shadow-sm h-100 text-decoration-none hover-shadow transition">
                                <div class="card-body d-flex align-items-center p-4">
                                    <div class="bg-warning bg-opacity-10 text-warning p-3 rounded-circle me-3">
                                        <i class="bi bi-journal-text fs-3"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold text-dark mb-1">Kết quả học tập</h5>
                                        <small class="text-muted">Xem bảng điểm, xếp loại</small>
                                    </div>
                                </div>
                            </a>
                        }
                        else
                        {
                            <a href="/Enrollment/MyClass" class="card border-0 shadow-sm h-100 text-decoration-none hover-shadow transition">
                                <div class="card-body d-flex align-items-center p-4">
                                    <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle me-3">
                                        <i class="bi bi-people-fill fs-3"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold text-dark mb-1">Lớp chủ nhiệm</h5>
                                        <small class="text-muted">Quản lý sinh viên</small>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white py-3">
                        <h6 class="m-0 fw-bold text-primary"><i class="bi bi-chat-dots-fill me-2"></i>Tin nhắn & Hỗ trợ</h6>
                    </div>
                    <div class="card-body text-center p-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/3770/3770807.png" width="100" class="mb-3 opacity-75">
                        <h5>Cần sự trợ giúp?</h5>
                        <p class="text-muted small">Liên hệ ngay với Giảng viên hoặc Admin qua hệ thống Chat nội bộ.</p>
                        <a href="/Chat/Index" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                            <i class="bi bi-send-fill me-2"></i> Mở Messenger
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
    }

    .transition {
        transition: all 0.3s ease;
    }
</style>

@if (isAdmin)
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var ctx = document.getElementById("statsChart");
            if (ctx) {
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: @Html.Raw(Json.Serialize(ViewBag.ChartLabels)),
                        datasets: [{
                            label: "Sĩ số học sinh",
                            data: @Html.Raw(Json.Serialize(ViewBag.ChartData)),
                            backgroundColor: "#4f46e5", borderRadius: 5
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false }
                });
            }
        });
    </script>
}