@model QuanLyLichHoc.Models.Student
@{
    ViewData["Title"] = "Cập nhật Học sinh";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning bg-opacity-75 text-dark text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold text-uppercase"><i class="bi bi-pencil-square me-2"></i>Cập nhật Hồ sơ Học sinh</h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary fw-bold mb-3"><i class="bi bi-person-badge me-2"></i>Thông tin cá nhân</h6>

                                <div class="form-floating mb-3">
                                    <input asp-for="StudentCode" class="form-control" placeholder="Mã SV" />
                                    <label asp-for="StudentCode">Mã Sinh Viên</label>
                                    <span asp-validation-for="StudentCode" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" placeholder="Họ tên" />
                                    <label asp-for="FullName">Họ và Tên</label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <label asp-for="DateOfBirth">Ngày sinh</label>
                                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-primary fw-bold mb-3"><i class="bi bi-building-check me-2"></i>Lớp học & Liên hệ</h6>

                                <div class="form-floating mb-3">
                                    <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId"></select>
                                    <label asp-for="ClassId">Lớp sinh hoạt</label>
                                    <span asp-validation-for="ClassId" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="SĐT" />
                                    <label asp-for="PhoneNumber">Số điện thoại</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>

                                <div class="alert alert-warning small mt-4 border-0 bg-warning bg-opacity-10 text-dark">
                                    <i class="bi bi-exclamation-circle me-1"></i>
                                    <strong>Lưu ý:</strong> Việc thay đổi Mã SV sẽ thay đổi Tên đăng nhập của học sinh này.
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 border-top pt-3">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">
                                <i class="bi bi-arrow-left"></i> Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-warning px-5 py-2 fw-bold shadow-sm rounded-pill text-dark">
                                <i class="bi bi-check-circle-fill me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}