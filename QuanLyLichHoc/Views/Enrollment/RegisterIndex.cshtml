@model IEnumerable<QuanLyLichHoc.Controllers.ClassViewModel>
@{
    ViewData["Title"] = "Đăng ký lớp học";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-mortarboard-fill me-2"></i>Đăng ký Lớp học</h2>
        <form method="get" class="d-flex">
            <input type="text" name="searchString" class="form-control me-2" placeholder="Tìm lớp hoặc GV..." value="@ViewData["CurrentFilter"]">
            <button class="btn btn-outline-primary" type="submit"><i class="bi bi-search"></i></button>
        </form>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            bool isFull = item.CurrentQuantity >= item.MaxQuantity;
            int percent = item.MaxQuantity > 0 ? (int)((double)item.CurrentQuantity / item.MaxQuantity * 100) : 0;
            string progressColor = percent >= 100 ? "bg-danger" : (percent >= 80 ? "bg-warning" : "bg-success");

            <div class="col-md-4 col-sm-6">
                <div class="card shadow-sm h-100 border-0 rounded-3 hover-shadow transition">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title fw-bold text-dark">@item.ClassName</h5>
                            @if (item.UserStatus == "Joined")
                            {
                                <span class="badge bg-success">Đã tham gia</span>
                            }
                            else if (item.UserStatus == "Pending")
                            {

                                <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            }
                        </div>

                        <p class="card-text text-muted mb-2 small"><i class="bi bi-person-badge me-1"></i> GV: @item.LecturerName</p>
                        <p class="card-text text-muted mb-3 small"><i class="bi bi-calendar-event me-1"></i> Khóa: @item.AcademicYear</p>

                        <div class="d-flex justify-content-between align-items-center mb-1 small">
                            <span>Sĩ số:</span>
                            <span class="fw-bold @(isFull ? "text-danger" : "text-success")">@item.CurrentQuantity / @item.MaxQuantity</span>
                        </div>
                        <div class="progress mb-4" style="height: 6px;">
                            <div class="progress-bar @progressColor" role="progressbar" style="width: @percent%"></div>
                        </div>

                        @if (item.UserStatus == "Joined")
                        {
                            <button class="btn btn-success w-100 opacity-75" disabled><i class="bi bi-check-circle"></i> Lớp của bạn</button>
                        }
                        else if (item.UserStatus == "Pending")
                        {
                            <button class="btn btn-secondary w-100" disabled><i class="bi bi-hourglass-split"></i> Đang chờ duyệt...</button>
                        }
                        else if (isFull)
                        {
                            <button class="btn btn-outline-danger w-100" disabled><i class="bi bi-x-circle"></i> Lớp đã đầy</button>
                        }
                        else
                        {
                            <form asp-action="Register" method="post">
                                <input type="hidden" name="classId" value="@item.Id" />
                                <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">
                                    <i class="bi bi-plus-lg"></i> Đăng ký ngay
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        transition: .3s;
    }
</style>