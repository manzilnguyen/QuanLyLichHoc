@model IEnumerable<QuanLyLichHoc.Models.Class>
@using QuanLyLichHoc.Models
@{
    ViewData["Title"] = "Lớp Chủ Nhiệm";
    var allStudents = ViewBag.Students as List<Student> ?? new List<Student>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-0"><i class="bi bi-person-workspace me-2"></i>Quản lý Lớp Chủ Nhiệm</h3>
            <p class="text-muted small mb-0">Danh sách sinh viên và thông tin liên lạc gia đình</p>
        </div>
        <span class="badge bg-primary rounded-pill fs-6 px-3 py-2 shadow-sm">HK @DateTime.Now.Year</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm border-0 rounded-3">
            <i class="bi bi-info-circle-fill me-2"></i> Bạn chưa được phân công chủ nhiệm lớp nào.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var lop in Model)
            {
                var studentsInClass = allStudents.Where(s => s.ClassId == lop.Id).ToList();
                int currentQty = studentsInClass.Count;

                <div class="col-12">
                    <div class="card shadow border-0 rounded-4 overflow-hidden mb-4">
                        <div class="card-header bg-white py-3 border-bottom">
                            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 50px; height: 50px;">
                                        <i class="bi bi-people-fill fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-bold text-dark">@lop.ClassName</h5>
                                        <div class="d-flex gap-2 mt-1">
                                            <span class="badge bg-light text-secondary border">Niên khóa: @lop.AcademicYear</span>
                                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">Sĩ số: @currentQty / @lop.MaxQuantity</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <a asp-action="ExportClassList" asp-route-classId="@lop.Id" class="btn btn-outline-success btn-sm rounded-pill fw-bold">
                                        <i class="bi bi-file-earmark-excel me-1"></i>Xuất Excel
                                    </a>
                                    <a asp-controller="Documents" asp-action="Index" asp-route-classId="@lop.Id" class="btn btn-outline-primary btn-sm rounded-pill fw-bold">
                                        <i class="bi bi-folder-fill me-1"></i>Tài liệu
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light text-uppercase small text-muted fw-bold">
                                        <tr>
                                            <th class="ps-4 py-3" style="width: 50px;">#</th>
                                            <th style="width: 300px;">Thông tin Sinh viên</th>
                                            <th>Liên lạc (SV)</th>
                                            <th class="text-end pe-4">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int index = 1;
                                        }
                                        @foreach (var sv in studentsInClass)
                                        {
                                            <tr>
                                                <td class="ps-4 text-muted">@(index++)</td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-3 flex-shrink-0 fw-bold border" style="width: 40px; height: 40px;">
                                                            @(sv.FullName.Length > 0 ? sv.FullName.Substring(0, 1) : "?")
                                                        </div>
                                                        <div>
                                                            <div class="fw-bold text-dark">@sv.FullName</div>
                                                            <div class="small text-muted font-monospace">@sv.StudentCode</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(sv.PhoneNumber))
                                                    {
                                                        <a href="tel:@sv.PhoneNumber" class="text-decoration-none text-secondary small">
                                                            <i class="bi bi-telephone-fill text-success me-1"></i>@sv.PhoneNumber
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted small fst-italic">--</span>
                                                    }
                                                </td>
                                                <td class="text-end pe-4">
                                                    <button class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm"
                                                            onclick="showStudentInfo(this)"
                                                            data-name="@sv.FullName"
                                                            data-code="@sv.StudentCode"
                                                            data-dob="@sv.DateOfBirth.ToString("dd/MM/yyyy")"
                                                            data-phone="@(sv.PhoneNumber ?? "---")"
                                                            data-address="@(sv.Address ?? "---")"
                                                            data-parent-name="@(sv.ParentName ?? "Chưa cập nhật")"
                                                            data-parent-phone="@(sv.ParentPhone ?? "")">
                                                        <i class="bi bi-person-lines-fill me-1"></i> Hồ sơ & PH
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                        @if (!studentsInClass.Any())
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center py-5 text-muted">
                                                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486754.png" width="64" class="mb-3 opacity-50">
                                                    <p class="mb-0">Lớp này chưa có sinh viên nào.</p>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-light py-2 small text-muted">
                            <i class="bi bi-info-circle me-1"></i> Hiển thị <strong>@currentQty</strong> sinh viên.
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="modal fade" id="studentInfoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-header bg-primary text-white border-0 py-3">
                <div class="d-flex align-items-center">
                    <div class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 45px; height: 45px;">
                        <i class="bi bi-person-vcard-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="modal-title fw-bold mb-0" id="modalStudentName">Tên Sinh Viên</h5>
                        <small class="opacity-75 font-monospace" id="modalStudentCode">Mã SV</small>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0">
                <div class="p-4">
                    <h6 class="text-uppercase text-primary small fw-bold mb-3 ls-1">
                        <i class="bi bi-person-fill me-2"></i>Thông tin cá nhân
                    </h6>
                    <div class="row g-3 mb-4">
                        <div class="col-6">
                            <label class="small text-muted d-block">Ngày sinh</label>
                            <span id="modalDob" class="fw-bold text-dark">---</span>
                        </div>
                        <div class="col-6">
                            <label class="small text-muted d-block">SĐT Cá nhân</label>
                            <span id="modalPhone" class="fw-bold text-dark">---</span>
                        </div>
                        <div class="col-12">
                            <label class="small text-muted d-block">Địa chỉ thường trú</label>
                            <span id="modalAddress" class="fw-bold text-dark">---</span>
                        </div>
                    </div>

                    <hr class="border-secondary opacity-10 my-4">

                    <h6 class="text-uppercase text-danger small fw-bold mb-3 ls-1">
                        <i class="bi bi-house-heart-fill me-2"></i>Thông tin Phụ huynh
                    </h6>

                    <div class="bg-warning bg-opacity-10 p-3 rounded-3 border border-warning border-opacity-25">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-white text-warning rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 40px; height: 40px;">
                                <i class="bi bi-telephone-outbound-fill"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block" style="line-height: 1;">Người liên hệ</small>
                                <span id="modalParentName" class="fs-5 fw-bold text-dark">---</span>
                            </div>
                        </div>

                        <div id="modalParentPhoneContainer">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-light border-0 py-2">
                <button type="button" class="btn btn-secondary rounded-pill px-4 btn-sm" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showStudentInfo(btn) {
        // 1. Lấy dữ liệu từ nút bấm (Data Attributes)
        var name = btn.getAttribute('data-name');
        var code = btn.getAttribute('data-code');
        var dob = btn.getAttribute('data-dob');
        var phone = btn.getAttribute('data-phone');
        var address = btn.getAttribute('data-address');
        var pName = btn.getAttribute('data-parent-name');
        var pPhone = btn.getAttribute('data-parent-phone');

        // 2. Điền dữ liệu vào Modal
        document.getElementById('modalStudentName').innerText = name;
        document.getElementById('modalStudentCode').innerText = code;
        document.getElementById('modalDob').innerText = dob;
        document.getElementById('modalPhone').innerText = phone;
        document.getElementById('modalAddress').innerText = address;
        document.getElementById('modalParentName').innerText = pName;

        // 3. Xử lý nút gọi điện cho Phụ huynh
        var pPhoneContainer = document.getElementById('modalParentPhoneContainer');
        if (pPhone && pPhone !== "---") {
            // Nếu có số -> Hiện nút gọi xanh lá
            pPhoneContainer.innerHTML = `
                <a href="tel:${pPhone}" class="btn btn-success w-100 rounded-pill fw-bold shadow-sm d-flex align-items-center justify-content-center py-2">
                    <i class="bi bi-telephone-fill me-2"></i> Gọi ngay: ${pPhone}
                </a>`;
        } else {
            // Nếu không có số -> Hiện thông báo
            pPhoneContainer.innerHTML = `
                <div class="text-center text-muted fst-italic py-1">
                    <i class="bi bi-slash-circle me-1"></i> Chưa cập nhật số điện thoại
                </div>`;
        }

        // 4. Hiển thị Modal
        var myModal = new bootstrap.Modal(document.getElementById('studentInfoModal'));
        myModal.show();
    }
</script>