@model IEnumerable<QuanLyLichHoc.Models.Enrollment>
@{
    ViewData["Title"] = "Duyệt đăng ký";
}

<div class="container mt-4">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-white py-3">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h4 class="mb-0 text-danger fw-bold"><i class="bi bi-list-check me-2"></i>Duyệt yêu cầu</h4>
                </div>
                <div class="col-md-4">
                    <form method="get">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control bg-light" placeholder="Tìm tên SV hoặc Lớp..." value="@ViewData["CurrentFilter"]">
                            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <form id="bulkForm" asp-action="BulkApprove" method="post">

                <div class="p-3 bg-light d-flex gap-2 border-bottom">
                    <button type="submit" name="isApproved" value="true" class="btn btn-success btn-sm fw-bold">
                        <i class="bi bi-check-all"></i> Duyệt đã chọn
                    </button>
                    <button type="submit" name="isApproved" value="false" class="btn btn-outline-danger btn-sm fw-bold">
                        <i class="bi bi-x"></i> Từ chối đã chọn
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-3" style="width: 40px;"><input type="checkbox" id="selectAll" class="form-check-input"></th>
                                <th>Thời gian</th>
                                <th>Học sinh</th>
                                <th>Nguyện vọng vào lớp</th>
                                <th class="text-end pe-4">Thao tác lẻ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr><td colspan="5" class="text-center py-5 text-muted">Không có yêu cầu nào đang chờ.</td></tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-3"><input type="checkbox" name="ids" value="@item.Id" class="form-check-input item-check"></td>
                                        <td class="text-muted small">@item.RegisterDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="fw-bold text-dark">@item.Student.FullName</td>
                                        <td><span class="badge bg-primary bg-opacity-10 text-primary border border-primary px-3 py-1 rounded-pill">@item.Class.ClassName</span></td>
                                        <td class="text-end pe-4">
                                            <button type="submit" formaction="/Enrollment/Approve?id=@item.Id&isApproved=true" class="btn btn-sm btn-light text-success border-0" title="Duyệt"><i class="bi bi-check-lg fs-5"></i></button>
                                            <button type="submit" formaction="/Enrollment/Approve?id=@item.Id&isApproved=false" class="btn btn-sm btn-light text-danger border-0" title="Từ chối"><i class="bi bi-x-lg fs-5"></i></button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('selectAll').onclick = function() {
        var checkboxes = document.querySelectorAll('.item-check');
        for (var checkbox of checkboxes) { checkbox.checked = this.checked; }
    }
</script>