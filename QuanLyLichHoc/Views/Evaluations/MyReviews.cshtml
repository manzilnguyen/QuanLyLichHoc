@model IEnumerable<QuanLyLichHoc.Models.LecturerEvaluation>
@{
    ViewData["Title"] = "Đánh giá về tôi";
    double avg = ViewBag.AverageRating;
}

<div class="container py-4">
    <h3 class="fw-bold text-primary mb-4"><i class="bi bi-chat-heart-fill me-2"></i>Phản hồi từ Sinh viên</h3>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <h1 class="display-3 fw-bold">@avg</h1>
                    <div class="fs-4 text-warning">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(avg))
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else
                            {

                                <i class="bi bi-star"></i>
                            }
                        }
                    </div>
                    <div class="mt-2 opacity-75">Điểm trung bình</div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h5 class="fw-bold text-muted">Tổng số đánh giá: @ViewBag.TotalReviews</h5>
                    <p class="text-muted">Dưới đây là danh sách các ý kiến đóng góp từ sinh viên các lớp bạn đang giảng dạy.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                @if (item.IsAnonymous)
                                {
                                    <span class="fw-bold text-muted"><i class="bi bi-incognito me-1"></i> Sinh viên ẩn danh</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-primary">@item.Student?.FullName</span>
                                    <small class="text-muted">(@item.Student?.StudentCode)</small>
                                }
                            </div>
                            <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy")</small>
                        </div>

                        <div class="mb-2 text-warning">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= item.Rating)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {

                                    <i class="bi bi-star text-secondary opacity-25"></i>
                                }
                            }
                        </div>

                        <p class="card-text fst-italic">"@item.Comment"</p>
                    </div>
                </div>
            </div>
        }
        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-chat-square-dots fs-1"></i>
                <p class="mt-2">Chưa có đánh giá nào.</p>
            </div>
        }
    </div>
</div>