@model IEnumerable<QuanLyLichHoc.Models.Attendance>
@{
    ViewData["Title"] = "Tình hình chuyên cần";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-danger mb-0">Điểm danh & Chuyên cần</h3>
            <div class="mt-2">
                <span class="badge bg-success me-2">Đã đi học: @ViewBag.DiHoc buổi</span>
                <span class="badge bg-danger">Vắng: @ViewBag.Vang buổi</span>
            </div>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Ngày học</th>
                        <th>Môn học</th>
                        <th>Trạng thái</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">@item.Date.ToString("dd/MM/yyyy")</td>
                            <td class="fw-bold">@item.Schedule?.Subject?.SubjectName</td>
                            <td>
                                @if (item.Status == QuanLyLichHoc.Models.AttendanceStatus.Approved)
                                {
                                    <span class="badge bg-success">Có mặt</span>
                                }
                                else if (item.Status == QuanLyLichHoc.Models.AttendanceStatus.Rejected)
                                {
                                    <span class="badge bg-danger">Vắng mặt</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                }
                            </td>
                            <td class="text-muted small">@item.Note</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>