@model IEnumerable<QuanLyLichHoc.Models.Schedule>
@{
    ViewData["Title"] = "Lịch học của con";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-warning mb-0">Thời khóa biểu</h3>
            <p class="text-muted mb-0">Học sinh: <span class="fw-bold text-dark">@ViewBag.StudentName</span></p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12"><div class="alert alert-info">Chưa có lịch học nào.</div></div>
        }
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 border-start border-4 border-warning shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold text-dark">@item.Subject?.SubjectName</h5>
                        <p class="card-text text-muted small mb-2"><i class="bi bi-person-video3 me-1"></i> GV: @(item.Lecturer?.FullName ?? "Chưa phân công")</p>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="badge bg-warning text-dark"><i class="bi bi-calendar-day"></i> @item.DayOfWeek</span>
                            <span class="badge bg-light text-dark border"><i class="bi bi-clock"></i> @item.StartTime - @item.EndTime</span>
                        </div>
                        <div class="mt-2 text-end">
                            <span class="badge bg-info"><i class="bi bi-geo-alt-fill"></i> Phòng @(item.Room?.RoomName)</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>