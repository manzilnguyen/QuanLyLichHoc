@model IEnumerable<QuanLyLichHoc.Models.Grade>
@{
    ViewData["Title"] = "Kết quả học tập";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-0">Bảng điểm chi tiết</h3>
            <p class="text-muted mb-0">Học sinh: <span class="fw-bold text-dark">@ViewBag.StudentName</span></p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Chưa có dữ liệu điểm số.</div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Môn học</th>
                            <th>Học kỳ</th>
                            <th class="text-center">Điểm số</th>
                            <th class="text-center">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.Subject?.SubjectName</td>
                                <td>@item.Semester</td>
                                <td class="text-center">
                                    <span class="badge fs-6 @(item.Score >= 5 ? "bg-success" : "bg-danger")">
                                        @item.Score
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (item.Score >= 5)
                                    {
                                        <span class="text-success small fw-bold"><i class="bi bi-check-circle-fill"></i> Đạt</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger small fw-bold"><i class="bi bi-x-circle-fill"></i> Trượt</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>