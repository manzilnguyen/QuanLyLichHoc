@{
    ViewData["Title"] = "Lịch biểu trực quan";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold text-primary m-0"><i class="bi bi-calendar-week"></i> Lịch Biểu Tuần Này</h5>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-primary btn-sm">+ Xếp lịch mới</a>
            }
        </div>
        <div class="card-body">
            <div id='calendar'></div>
        </div>
    </div>
</div>

<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'timeGridWeek', // Hiển thị dạng tuần có giờ
            locale: 'vi', // Tiếng Việt
            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            slotMinTime: '07:00:00', // Giờ bắt đầu hiển thị
            slotMaxTime: '18:00:00', // Giờ kết thúc
            allDaySlot: false,
            events: '/Schedules/GetCalendarEvents', // Gọi API chúng ta vừa viết
            eventClick: function(info) {
                // Khi click vào sự kiện thì hiện chi tiết (dùng SweetAlert)
                Swal.fire({
                    title: info.event.title,
                    html: info.event.extendedProps.description +
                          '<br>🕒 ' + info.event.start.toLocaleTimeString() + ' - ' + info.event.end.toLocaleTimeString(),
                    icon: 'info'
                });
            }
        });
        calendar.render();
    });
</script>

<style>
    /* Tùy chỉnh chiều cao lịch */
    #calendar {
        min-height: 600px;
    }

    .fc-event {
        cursor: pointer;
    }
</style>