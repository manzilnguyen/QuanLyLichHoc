@model QuanLyLichHoc.Models.LeaveRequest
@{
    ViewData["Title"] = "Soạn đơn xin nghỉ";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold text-uppercase"><i class="bi bi-send-fill me-2"></i>Soạn Đơn Xin Nghỉ</h5>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-10">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm mb-3"></div>

                        <div class="form-floating mb-3">
                            <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassList">
                                <option value="">-- Chọn lớp học --</option>
                            </select>
                            <label asp-for="ClassId">Bạn muốn nghỉ lớp nào?</label>
                            <span asp-validation-for="ClassId" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="LeaveDate" class="form-control" type="date"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                            <label asp-for="LeaveDate">Ngày nghỉ</label>
                            <span asp-validation-for="LeaveDate" class="text-danger small"></span>
                            <small class="text-muted fst-italic ms-1">* Vui lòng không chọn ngày trong quá khứ.</small>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Reason" class="form-control" placeholder="Lý do" style="height: 120px"></textarea>
                            <label asp-for="Reason">Lý do xin nghỉ (Trình bày rõ ràng)</label>
                            <span asp-validation-for="Reason" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-bold shadow-sm rounded-pill">
                                <i class="bi bi-paperplane-fill me-1"></i> Gửi Đơn
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4 border-0 shadow-sm rounded-3">
                <div class="d-flex">
                    <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                    <div>
                        <strong>Lưu ý quan trọng:</strong>
                        <ul class="mb-0 ps-3 small mt-1">
                            <li>Đơn xin nghỉ cần được Giảng viên phê duyệt mới được tính là hợp lệ.</li>
                            <li>Hệ thống sẽ gửi thông báo cho bạn ngay khi Giảng viên phản hồi.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}