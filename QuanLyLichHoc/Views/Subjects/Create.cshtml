@model QuanLyLichHoc.Models.Subject
@{
    ViewData["Title"] = "Thêm Môn học";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold text-uppercase">Thêm Môn Học Mới</h5>
                </div>
                <div class="card-body p-4 bg-light bg-opacity-10">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 border-0 shadow-sm"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="SubjectCode" class="form-control" placeholder="Nhập mã môn" />
                            <label asp-for="SubjectCode">Mã môn học (VD: INT101)</label>
                            <span asp-validation-for="SubjectCode" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="SubjectName" class="form-control" placeholder="Nhập tên môn" />
                            <label asp-for="SubjectName">Tên môn học</label>
                            <span asp-validation-for="SubjectName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Credits" class="form-control" type="number" placeholder="Số tín chỉ" />
                            <label asp-for="Credits">Số tín chỉ (1-10)</label>
                            <span asp-validation-for="Credits" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Index" class="text-decoration-none text-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-bold shadow-sm rounded-pill">
                                <i class="bi bi-save me-1"></i> Lưu dữ liệu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}