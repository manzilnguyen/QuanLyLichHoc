@model QuanLyLichHoc.Models.Class
@{
    ViewData["Title"] = "Chi tiết Lớp học";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle-fill me-2"></i>Chi tiết Lớp: @Model.ClassName</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3 border-bottom pb-2">
                        <div class="col-sm-4 fw-bold text-muted">Tên lớp</div>
                        <div class="col-sm-8 text-primary fw-bold">@Model.ClassName</div>
                    </div>
                    <div class="row mb-3 border-bottom pb-2">
                        <div class="col-sm-4 fw-bold text-muted">Niên khóa</div>
                        <div class="col-sm-8">@Model.AcademicYear</div>
                    </div>
                    <div class="row mb-3 border-bottom pb-2">
                        <div class="col-sm-4 fw-bold text-muted">Sĩ số tối đa</div>
                        <div class="col-sm-8">@Model.MaxQuantity sinh viên</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-muted">GV Chủ nhiệm</div>
                        <div class="col-sm-8">
                            @if (Model.Lecturer != null)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">
                                    <i class="bi bi-person-check-fill me-1"></i> @Model.Lecturer.FullName
                                </span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">-- Chưa phân công --</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light p-3 d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary rounded-pill">
                        <i class="bi bi-arrow-return-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>