@{
    ViewData["Title"] = "Danh bạ liên hệ";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-0"><i class="bi bi-person-lines-fill"></i> Danh bạ liên hệ</h3>
            <p class="text-muted">Danh sách Giảng viên / Phụ huynh liên quan</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại tin nhắn</a>
    </div>

    <div class="row g-3">
        @if (ViewBag.Contacts != null)
        {
            // TRƯỜNG HỢP: PHỤ HUYNH XEM DANH SÁCH GIẢNG VIÊN
            if (ViewBag.Type == "ParentView")
            {
                foreach (var item in ViewBag.Contacts as IEnumerable<QuanLyLichHoc.Models.Lecturer>)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; font-size: 1.5rem;">
                                    @item.FullName.Substring(0, 1)
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-0">@item.FullName</h6>
                                    <small class="text-muted">@item.Department</small>
                                </div>

                                @if (item.AppUser != null)
                                {
                                    <a asp-action="StartPrivateChat" asp-route-targetUserId="@item.AppUser.Id" class="btn btn-primary btn-sm rounded-pill px-3">
                                        <i class="bi bi-chat-dots-fill"></i> Chat
                                    </a>
                                }
                                else
                                {
                                    <button disabled class="btn btn-secondary btn-sm rounded-pill px-3">Chưa có TK</button>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            // TRƯỜNG HỢP: GIẢNG VIÊN XEM DANH SÁCH PHỤ HUYNH
            else if (ViewBag.Type == "LecturerView")
            {
                foreach (var item in ViewBag.Contacts as IEnumerable<dynamic>)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body d-flex align-items-center">
                                <div class="bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; font-size: 1.5rem;">
                                    P
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-0">@item.FullName</h6>
                                    <small class="text-muted">@item.SubInfo</small>
                                </div>
                                <a asp-action="StartPrivateChat" asp-route-targetUserId="@item.Id" class="btn btn-primary btn-sm rounded-pill px-3">
                                    <i class="bi bi-chat-dots-fill"></i> Chat
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-info">Không tìm thấy liên hệ nào phù hợp.</div>
            </div>
        }
    </div>
</div>