    <script>
        $(document).ready(function () {
            // Init Libraries
            if ($('.datatable').length) $('.datatable').DataTable({ "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json" }, "responsive": true });
            if ($('.select2').length) $('.select2').select2({ theme: 'bootstrap-5' });

            @if (User.Identity.IsAuthenticated)
            {
                    <text>
                    // ==========================================
                    // 1. TẢI THÔNG BÁO CŨ TỪ DATABASE (FIX MẤT TIN KHI F5)
                    // ==========================================
                    $.get("/Public/GetNotifications", function(data) {
                        // Xóa danh sách cũ (giữ lại header và empty state)
                        $("#notiList li.notification-item").remove();

                        if(data && data.length > 0) {
                            $("#notiEmpty").hide();

                            // Duyệt qua từng tin và thêm vào giao diện
                            data.forEach(function(item) {
                                addNotificationToUI(item.title, item.message, item.url, item.type, item.time, false);
                            });

                            // Cập nhật số lượng badge
                            var badge = $("#notiCount");
                            badge.text(data.length).show();
                        } else {
                            $("#notiEmpty").show();
                        }
                    });

                    // ==========================================
                    // 2. KẾT NỐI REAL-TIME (SIGNALR)
                    // ==========================================
                    var notiConnection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();

                    // Handler: Nhận thông báo cá nhân (Điểm, Học phí...)
                    notiConnection.on("ReceiveNotification", function (title, message, url, type) {
                        handleNewNoti(title, message, url, type, null);
                    });

                    // Handler: Nhận thông báo hệ thống (Admin gửi)
                    notiConnection.on("ReceiveSystemNotification", function (title, content, type, time) {
                        handleNewNoti(title, content, "#", type, time);
                    });

                    notiConnection.start().catch(err => console.error("SignalR Error:", err));

                    // ==========================================
                    // 3. HÀM HỖ TRỢ (HELPER FUNCTIONS)
                    // ==========================================

                    // Xử lý khi có tin mới
                    function handleNewNoti(title, message, url, type, timeStr) {
                        playNotificationSound();

                        // Hiển thị Toast (Popup góc phải)
                        Swal.fire({
                            title: title,
                            text: message,
                            icon: type === 'Danger' ? 'error' : (type === 'Warning' ? 'warning' : 'info'),
                            toast: true, position: 'top-end', showConfirmButton: false, timer: 6000, timerProgressBar: true,
                            didOpen: (toast) => { toast.addEventListener('click', () => { if(url && url !== '#') window.location.href = url; }); }
                        });

                        // Thêm vào danh sách dropdown (isNew = true để chèn lên đầu)
                        addNotificationToUI(title, message, url, type, timeStr, true);

                        // Hiệu ứng rung chuông + tăng số
                        var badge = $("#notiCount");
                        var currentCount = parseInt(badge.text()) || 0;
                        badge.text(currentCount + 1).show().addClass("animate__heartBeat");
                        setTimeout(() => badge.removeClass("animate__heartBeat"), 1000);
                    }

                    // Hàm vẽ HTML cho 1 dòng thông báo
                    function addNotificationToUI(title, message, url, type, timeStr, isNew) {
                        $("#notiEmpty").hide();
                        var time = timeStr || new Date().toLocaleTimeString('vi-VN', {hour: '2-digit', minute:'2-digit'});

                        // Chọn icon dựa trên loại tin
                        var iconClass = type === 'Danger' ? 'bi-exclamation-circle-fill text-danger' :
                                       (type === 'Warning' ? 'bi-bell-fill text-warning' :
                                       (type === 'Info' ? 'bi-info-circle-fill text-info' : 'bi-check-circle-fill text-success'));

                        // Template HTML
                        var html = `<li class="notification-item border-bottom">
                                        <a class="dropdown-item d-flex align-items-start py-2" href="${url || '#'}" style="gap:10px;">
                                            <div class="mt-1 fs-5"><i class="bi ${iconClass}"></i></div>
                                            <div style="flex:1; min-width:0;">
                                                <div class="fw-bold small text-truncate">${title}</div>
                                                <div class="text-muted small text-wrap" style="line-height: 1.3;">${message}</div>
                                                <div class="text-secondary mt-1" style="font-size:0.65rem"><i class="bi bi-clock"></i> ${time}</div>
                                            </div>
                                        </a>
                                    </li>`;

                        if (isNew) {
                            // Nếu là tin mới Realtime -> Chèn ngay sau Header
                            $(".noti-header").after(html);
                        } else {
                            // Nếu là load lịch sử -> Chèn vào cuối danh sách (trước mục Empty)
                            $("#notiEmpty").before(html);
                        }
                    }

                    function playNotificationSound() {
                        var audio = document.getElementById("notifSound");
                        if(audio) audio.play().catch(e => console.log("Audio auto-play blocked by browser"));
                    }
                    </text>
            }
        });

        // ==========================================
        // 4. CHATBOT LOGIC
        // ==========================================
        function toggleChatbot() {
            var win = document.getElementById("chatbot-window");
            win.style.display = (win.style.display === "none" || win.style.display === "") ? "flex" : "none";
            if(win.style.display === "flex") document.getElementById("cb-input").focus();
        }

        function appendMessage(html, sender) {
            var div = document.createElement("div");
            div.className = "cb-msg " + sender;
            div.innerHTML = html;
            var box = document.getElementById("cb-messages");
            box.appendChild(div);
            box.scrollTop = box.scrollHeight;
            return div;
        }

        function sendToAI() {
            var input = document.getElementById("cb-input");
            var msg = input.value.trim();
            if (!msg) return;

            appendMessage(msg, "user");
            input.value = "";
            var loading = appendMessage('<div class="typing"><span>.</span><span>.</span><span>.</span></div>', "bot");

            fetch('/ChatBot/Ask', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message: msg })
            })
            .then(r => r.json())
            .then(d => {
                loading.remove();
                appendMessage(d.answer, "bot");
            })
            .catch(() => {
                loading.remove();
                appendMessage("Lỗi kết nối server.", "bot");
            });
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
