    <style>
        :root {
            --primary-color: #4f46e5;
            --primary-gradient: linear-gradient(135deg, #4f46e5, #7c3aed);
            --glass-bg: rgba(255, 255, 255, 0.95);
            --glass-border: 1px solid rgba(255, 255, 255, 0.5);
            --shadow-soft: 0 10px 40px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: #f3f4f6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar-glass {
            background: var(--glass-bg) !important;
            backdrop-filter: blur(16px);
            border-bottom: var(--glass-border);
            padding: 0.8rem 0;
        }

        /* Notification Styling */
        #notiList {
            max-height: 400px;
            overflow-y: auto;
            width: 350px;
        }

            #notiList::-webkit-scrollbar {
                width: 5px;
            }

            #notiList::-webkit-scrollbar-thumb {
                background-color: #cbd5e1;
                border-radius: 10px;
            }

        .notification-item:hover {
            background-color: #f8fafc;
        }

        .dropdown-menu {
            border-radius: 12px;
            border: 1px solid rgba(0,0,0,0.05);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        /* Chatbot Widget */
        #chatbot-toggle {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 99999;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: var(--primary-gradient);
            color: white;
            border: none;
            box-shadow: 0 4px 20px rgba(79, 70, 229, 0.4);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 26px;
            transition: transform 0.3s;
        }

            #chatbot-toggle:hover {
                transform: scale(1.1);
            }

        #chatbot-window {
            position: fixed;
            bottom: 100px;
            right: 30px;
            z-index: 99998;
            width: 380px;
            height: 500px;
            background: #fff;
            border-radius: 20px;
            box-shadow: var(--shadow-soft);
            display: none;
            flex-direction: column;
            overflow: hidden;
            border: 1px solid rgba(0,0,0,0.1);
        }

        .cb-header {
            background: var(--primary-gradient);
            padding: 15px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 600;
        }

        .cb-body {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background: #f8fafc;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .cb-footer {
            padding: 15px;
            background: #fff;
            border-top: 1px solid #f1f5f9;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .cb-input {
            flex: 1;
            border: 1px solid #e2e8f0;
            border-radius: 25px;
            padding: 10px 15px;
            outline: none;
            background: #f8fafc;
            transition: border 0.2s;
        }

            .cb-input:focus {
                border-color: var(--primary-color);
                background: #fff;
            }

        .cb-btn-send {
            background: var(--primary-color);
            color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .cb-msg {
            max-width: 80%;
            padding: 10px 16px;
            border-radius: 18px;
            font-size: 0.9rem;
            line-height: 1.4;
            word-wrap: break-word;
        }

            .cb-msg.bot {
                background: #fff;
                color: #1e293b;
                align-self: flex-start;
                box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            }

            .cb-msg.user {
                background: var(--primary-color);
                color: white;
                align-self: flex-end;
            }
    </style>
</head>
