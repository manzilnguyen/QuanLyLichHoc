@model QuanLyLichHoc.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="bi bi-shield-lock"></i> Đổi Mật Khẩu</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword">
                        <div class="form-group mb-3">
                            <label class="fw-bold">Mật khẩu hiện tại</label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label class="fw-bold">Mật khẩu mới</label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label class="fw-bold">Xác nhận mật khẩu mới</label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Xác nhận đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>