@model IEnumerable<QuanLyLichHoc.Models.Banner>
@{
    ViewData["Title"] = "Quản lý Banner";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-primary mb-0"><i class="bi bi-images me-2"></i>Quản lý Banner & Sự kiện</h3>
            <p class="text-muted small mb-0">Quản lý các hình ảnh hiển thị trên trang chủ</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4 fw-bold">
            <i class="bi bi-plus-lg me-1"></i> Thêm mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden hover-shadow">
                    <div class="position-relative">
                        <img src="@item.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Banner">

                        <div class="position-absolute top-0 end-0 m-3">
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success shadow-sm"><i class="bi bi-eye-fill me-1"></i> Đang hiện</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary shadow-sm"><i class="bi bi-eye-slash-fill me-1"></i> Đang ẩn</span>
                            }
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title fw-bold text-primary mb-0 text-truncate" title="@item.Title">@item.Title</h5>
                            <span class="badge bg-light text-dark border ms-2">Ưu tiên: @item.Priority</span>
                        </div>

                        <p class="card-text text-muted small text-truncate-2" style="min-height: 40px;">
                            @(item.Description ?? "Không có mô tả")
                        </p>

                        @if (!string.IsNullOrEmpty(item.LinkUrl))
                        {
                            <small class="d-block text-truncate mb-3 text-info">
                                <i class="bi bi-link-45deg"></i> @item.LinkUrl
                            </small>
                        }
                    </div>

                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center pb-3">
                        <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy")</small>

                        <div class="btn-group">
                            <a asp-action="ToggleActive" asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-secondary"
                               title="@(item.IsActive ? "Ẩn đi" : "Hiện lại")">
                                <i class="bi @(item.IsActive ? "bi-toggle-on text-success" : "bi-toggle-off") fs-5"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-warning">
                                <i class="bi bi-pencil-square fs-5"></i>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-light text-danger"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa banner này không?');">
                                <i class="bi bi-trash fs-5"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        transition: 0.3s;
    }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>