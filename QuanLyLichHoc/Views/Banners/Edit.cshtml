@model QuanLyLichHoc.Models.Banner
@{
    ViewData["Title"] = "Sửa Banner";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning bg-opacity-75 text-dark text-center py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold">CẬP NHẬT BANNER</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" /> <div class="row">
                            <div class="col-md-7">
                                <div class="form-floating mb-3">
                                    <input asp-for="Title" class="form-control" placeholder="Tiêu đề" />
                                    <label asp-for="Title">Tiêu đề Banner</label>
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input asp-for="LinkUrl" class="form-control" placeholder="URL" />
                                    <label asp-for="LinkUrl">Liên kết</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                                    <label asp-for="Description">Mô tả</label>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Priority" class="form-control" type="number" />
                                            <label asp-for="Priority">Thứ tự</label>
                                        </div>
                                    </div>
                                    <div class="col-6 d-flex align-items-center">
                                        <div class="form-check form-switch fs-5">
                                            <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                            <label class="form-check-label fs-6">Hiển thị</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5">
                                <div class="card bg-light border-0 h-100">
                                    <div class="card-body text-center d-flex flex-column justify-content-center">
                                        <label class="fw-bold mb-2">Ảnh hiện tại / Thay thế</label>
                                        <div class="mb-3 rounded-3 overflow-hidden bg-white shadow-sm d-flex align-items-center justify-content-center" style="height: 160px;">
                                            <img id="imgPreview" src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/400x200" : Model.ImageUrl)"
                                                 class="img-fluid" style="max-height: 100%; width: 100%; object-fit: cover;" />
                                        </div>
                                        <input type="file" name="imageFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-light rounded-pill px-4">Hủy bỏ</a>
                            <button type="submit" class="btn btn-warning rounded-pill px-5 fw-bold shadow-sm">
                                <i class="bi bi-check-circle me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imgPreview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}